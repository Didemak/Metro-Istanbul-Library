@model LibraryMVC.Models.Kitap
@{
    ViewBag.Title = "KitapEkle";
}

<h2>Kitap Kayıt</h2>
@{
    var kayittarihi = DateTime.Now;

}

@using (Html.BeginForm("KitapEkle", "Kutuphane", FormMethod.Post))
{
    <div class="form-horizontal">
        <div class="form-group">
            <label for="inputEmail3" class="control-label col-md-3">Kitap Adı</label>
            <div class="col-md-9">
                @Html.TextBox("KitapAdi", null, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label for="inputEmail3" class="control-label col-md-3">Kitap Yazarı</label>
            <div class="col-md-9">
                @Html.TextBox("KitapYazari", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label for="inputEmail3" class="control-label col-md-3">Açıklama</label>
            <div class="col-md-9">
                @Html.TextArea("Aciklama", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label for="inputEmail3" class="control-label col-md-3">Baskı Yılı</label>
            <div class="col-md-9">
                @Html.TextBox("BaskiYil", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label for="inputEmail3" class="control-label col-md-3">Yayınevi</label>
            <div class="col-md-9">
                @Html.TextBox("YayinEvi", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label for="inputEmail3" class="control-label col-md-3">Kitap Adedi</label>
            <div class="col-md-9">
                @Html.TextBox("StokDurumu", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-9">
                <input type="hidden" name="EklenmeTarihi" value="@kayittarihi" /> <!--type="hidden" inputu gizli yapıyor.-->
            </div>
        </div>
        <div class="form-group">
            <label for="inputEmail3" class="control-label col-md-3">Kitap Türü</label>
            <div class="col-md-9">

                @Html.DropDownListFor(x => x.TurID, (List<SelectListItem>)ViewBag.degerlerim, new { @class = "form-control" })

                @*@Html.DropDownList("TurID",
                    new List<SelectListItem> {
