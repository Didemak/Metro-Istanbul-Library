@using EntityLayer.Concrete
@model List<Odunc>
@{
    ViewBag.Title = "GecmisListele";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Silinen Kitap Ödünç Durumları</h2>


<table class="table table-striped">

    <thead>
        <tr>
            <th>Kitap Adı</th>
            <th>Sicil Numarası</th>
            <th>Ödünç Alan Kişi</th>
            <th>Alınan Tarih</th>
            <th>Teslim Edilen Tarih</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.IsActive == false)
            {
        <tr>
            <td>@item.Kitap.KitapAdi</td>
            <td>@item.Uye.SicilNo</td>
            <td>@item.Uye.UyeAdi @item.Uye.UyeSoyadi</td>
            <td>@item.AlinanTarih</td>
            <td>@item.TeslimEdilenTarih</td>
            <td>@Html.ActionLink("SİL", "OduncGecmisSil", new { id = item.Id }, new { @class = "btn btn-danger" })</td>
        </tr>
            }

        }

    </tbody>
</table>
