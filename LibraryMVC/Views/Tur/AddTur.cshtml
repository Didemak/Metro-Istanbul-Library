@model EntityLayer.Concrete.Tur
@{
    ViewBag.Title = "AddTur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tür Kayıt</h2>


@using (Html.BeginForm("AddTur", "Tur", FormMethod.Post))
{
    <div class="form-horizontal">
        <div class="form-group">
            <label for="inputEmail3" class="control-label col-md-3">Tür Adı</label>
            <div class="col-md-9">
                @Html.TextBox("TurAdi", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.TurAdi)
            </div>
        </div>

  

        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <button type="submit" class="btn btn-default">Kaydet</button>
            </div>
        </div>
    </div>
}